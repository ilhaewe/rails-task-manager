<div class="container mt-5">
  <h1 class="text-center mb-4">Tasks</h1>

  <div class="list-group">
    <% @tasks.each do |task| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to task.title, task_path(task), class: "text-decoration-none" %>
        <div>
          <%= link_to "Delete", delete_task_path(task), data: { turbo_method: :delete, turbo_confirm: "Es-tu sÃ»r ?" }, class: "btn btn-danger btn-sm" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Add a new task", new_task_path, class: "btn btn-primary" %>
  </div>
</div>
