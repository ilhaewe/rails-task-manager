<div class="container mt-5">
  <h1 class="text-center mb-4">Edit Task</h1>

  <%= form_with model: @task, local: true, html: { class: "needs-validation", novalidate: true } do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :details, class: "form-label" %>
      <%= f.text_area :details, class: "form-control", rows: 4 %>
    </div>

    <div class="mb-3 form-check">
      <%= f.check_box :completed, class: "form-check-input" %>
      <%= f.label :completed, class: "form-check-label" %>
    </div>

    <div class="text-center">
      <%= f.submit "Update Task", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to "Back to tasks", tasks_path, class: "btn btn-secondary" %>
  </div>
</div>
