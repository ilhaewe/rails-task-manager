<div class="container mt-5">
  <h1 class="text-center mb-4"><%= @task.title %></h1>

  <div class="card">
    <div class="card-body">
      <p class="card-text"><%= @task.details %></p>
      <p class="card-text">
        <strong>Status:</strong>
        <span class="badge <%= @task.completed ? 'bg-success' : 'bg-warning' %>">
          <%= @task.completed ? "Completed" : "Not completed" %>
        </span>
      </p>
    </div>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Edit", edit_task_path(@task), class: "btn btn-primary me-2" %>
    <%= link_to "Back to tasks", tasks_path, class: "btn btn-secondary" %>
  </div>
</div>
